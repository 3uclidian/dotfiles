# vim: filetype=sh
# config file editing and reloading
alias ebrc="$EDITOR $DOTFILE_DIR/.bashrc && source ~/.bashrc"
alias exr="$EDITOR $DOTFILE_DIR/.Xresources && xrdb ~/.Xresources"
alias envrc="$EDITOR $DOTFILE_DIR/nvim/ +'cd $DOTFILE_DIR/nvim/'"
alias eps1="$EDITOR $DOTFILE_DIR/ps1Getter.lua"
alias egc="$EDITOR $DOTFILE_DIR/.gitconfig"
