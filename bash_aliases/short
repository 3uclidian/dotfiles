# vim: filetype=sh
# actual "aliases"
alias e=$EDITOR
alias v="vim"
alias nv="nvim"
alias code="codium-bin"

function mkcd {
	mkdir -p "$1" && cd $1
}

function touchx {
	file=`basename $1`
	extension="${file##*.}"
	touch $1 && chmod +x $1 && echo -e "#!/usr/bin/env $extension\n" > $1 && $EDITOR $1
}
